@{
}


<div id="preloader"></div>

<!-- subheader begin -->
<section id="subheader" data-speed="2" data-type="background">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h1>ONLINE GIVING</h1>
            </div>
        </div>
    </div>
</section>
<!-- subheader close -->


<!-- content begin -->
<div id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12 align-content-center">
                <div id="contact-form-wrapper">
                    <div class="contact_form_holder">
                        
                        <h3>SURELY, YOU'LL BE BLESSED AND YOU WILL NOT LABOUR IN VAIN IN JESUS NAME</h3>
                        <form>
                          <fieldset>
                            

                            <div class="form-group">
                              <label for="exampleSelect1" class="form-label mt-4">Payment Type</label>
                              <select class="form-select" id="exampleSelect1">
                                <option selected>Thanksgiving Offering</option>
                                <option>Tithe</option>
                                <option>Love Offering</option>
                                <option>First Fruit</option>
                                <option>Project Donation</option>
                                <option>Holy Ghost Service Offering</option>
                                <option>Holy Ghost Congress Offering</option>
                              </select>
                            </div>

                            <div class="form-group has-danger">
                              <label for="name" class="form-label mt-4">Name</label>
                              <input type="text" class="form-control" id="name" placeholder="Full name">
                            </div>

                            <div class="form-group">
                              <label for="email" class="form-label mt-4">Email address</label>
                              <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                              <p class="pt-0">We'll never share your email with anyone else.</p>
                            </div>

                            <div class="form-group">
                              <label for="amount" class="form-label mt-4">Amount</label>
                              <input type="number" class="form-control" id="amount" placeholder="Amount">
                            </div>

                            <button type="submit" class="btn btn-primary">Submit</button>
                          </fieldset>
                        </form>


                    </div>
                </div>
            </div>

            


            </div>
        </div>
    </div>
</div>
<!-- content close -->




