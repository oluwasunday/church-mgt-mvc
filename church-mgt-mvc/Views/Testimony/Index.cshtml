
@{
    ViewData["Title"] = "Index";
}

<div id="preloader"></div>

        <!-- subheader begin -->
        <section id="subheader" data-speed="2" data-type="background">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        <h1>TESTIMONY</h1>
                    </div>
                </div>
            </div>
        </section>
        <!-- subheader close -->

        <!-- content begin -->
        <div id="content">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div id="contact-form-wrapper">
                            <div class="contact_form_holder">
                                <h1>Share Your Testimony</h1>

                                <h4>Share your testimony to the glory of the Lord, and expect more blessings</h4>
                                
                                <div class="row">
                                    <div class="col-md-12">
                                        @if(ViewBag.Info != null)
                                        {
                                            <h3 style="color: green">@ViewBag.Info</h3>
                                        }
                                        else
                                        {
                                            <h3 style="color: red">@ViewBag.Error</h3>
                                        }
                                        <form asp-action="Index " method="post">
                                            
                                            <div class="form-group">
                                                <label class="control-label">Full name (eg - bro/pastor Ade Ikenna Adamu)</label>
                                                <input  name="FullName" class="form-control" placeholder="Enter full name with title" />
                                            </div>

                                            <div class="form-group">
                                              <label class="control-label">Gender</label>
                                              <select class="form-select" id="exampleSelect1" name="Sex">
                                                <option selected>Male</option>
                                                <option>Female</option>
                                              </select>
                                            </div>

                                            <div class="form-group mt-2">
                                                <label class="control-label"></label>
                                                <input name="Email" class="form-control" placeholder="Enter email" />
                                                
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Phone number</label>
                                                <input name="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                                                
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Location</label>
                                                <input name="Address" class="form-control" placeholder="Enter Location" />
                                                
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Share your testimony</label>
                                                <textarea cols="10" rows="10" name="YourTestimony" id="message" class="form-control" placeholder="Your testimony"></textarea>
                                                
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Submit" class="btn btn-primary" />
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                @*<div>
                                    <a asp-action="Index">Back to List</a>
                                </div>*@
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 text-center">
                        <div class="contact-info">

                            <div class="social-icons">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-youtube"></i></a>
                            </div>

                            <div class="divider-line"></div>

                            <span class="title">Telephone:</span>
                            0805-434-8438
						
						<div class="divider-line"></div>

                            <span class="title">Church Time:</span>
                            Sunday Service: 09:30 - 11:00am<br>
                            Sunday School: 08:30 - 09:30am<br>
                            Digging Deep: Tuesdays 05:30pm<br>
                            Faith Clinic: Thursdays 05:30pm<br>

                            <div class="divider-line"></div>

                            <span class="title">Address:</span>
                            4, Adeniji Street, Behind Molaroid Hotel, Sagamu, Ogun State
						
                        </div>


                    </div>
                </div>
            </div>
        </div>
        <!-- content close -->